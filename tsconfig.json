{
	"compilerOptions": {
		"strict": true,
		"outDir": "build",
		"target": "es2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"ts-node": {
		"transpileOnly": true
	},
	"exclude": ["node_modules", "build", "__ignore__", "temp", "tmp"],
	"include": ["types", "src"]
}
